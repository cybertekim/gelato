<?xml version="1.0"?>
<config>
    <modules>
        <Mageex_Onsale>
            <version>0.1.0</version>
        </Mageex_Onsale>
    </modules>
    <frontend>
        <routers>
            <onsale>
                <use>standard</use>
                <args>
                    <module>Mageex_Onsale</module>
                    <frontName>onsale</frontName>
                </args>
            </onsale>
        </routers>
        <layout>
            <updates>
                <onsale>
                    <file>onsale.xml</file>
                </onsale>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<onsale>
				<use>admin</use>
				<args>
					<module>Mageex_Onsale</module>
					<frontName>onsale</frontName>
				</args>
			</onsale>
        </routers>
    </admin>
    <adminhtml>
		<acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <onsale translate="title" module="onsale">
                                            <title>Slider Config</title>
                                            <sort_order>55</sort_order>
                                        </onsale>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
          </acl>
		<layout>
			<updates>
				<onsale>
					<file>onsale.xml</file>
				</onsale>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <onsale>
                <class>Mageex_Onsale_Model</class>
                <resourceModel>onsale_mysql4</resourceModel>
            </onsale>
            <onsale_mysql4>
                <class>Mageex_Onsale_Model_Mysql4</class>
                <entities>
                    <onsale>
                        <table>onsale</table>
                    </onsale>
                </entities>
            </onsale_mysql4>
        </models>
        <resources>
            <onsale_setup>
                <setup>
                    <module>Mageex_Onsale</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </onsale_setup>
            <onsale_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </onsale_write>
            <onsale_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </onsale_read>
        </resources>
        <blocks>
            <onsale>
                <class>Mageex_Onsale_Block</class>
            </onsale>
        </blocks>
        <helpers>
            <onsale>
                <class>Mageex_Onsale_Helper</class>
            </onsale>
        </helpers>
    </global>
	<default>
		<onsale>
			<slider>
				<slide_duration>500</slide_duration>
			</slider>
		</onsale>
	</default>
</config>